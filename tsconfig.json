{
    "compileOnSave": false,
    "compilerOptions": {
        "paths": {
            "@app/*": ["./src/app/*"], // Define the alias
            // Web3Octopus
            "@vapaee/w3o-core":     [ "../web3-octopus/w3o-core/src" ],
            "@vapaee/w3o-antelope": [ "../web3-octopus/w3o-antelope/src" ],
            "@vapaee/w3o-ethereum": [ "../web3-octopus/w3o-ethereum/src" ]
        },
        "baseUrl": "./", // Set the base URL to the project root
        "outDir": "./dist/out-tsc",
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": false,
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "ES2022",
        "module": "ES2020",
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "angularCompilerOptions": {
        "enableI18nLegacyMessageIdFormat": false,
        "strictInjectionParameters": true,
        "strictInputAccessModifiers": true,
        "strictTemplates": true
    }
}
